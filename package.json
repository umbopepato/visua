{
  "name": "visua",
  "version": "0.0.1",
  "description": "A powerful brand identity automation tool.",
  "main": "dist/visua.js",
  "scripts": {
    "start": "node ./dist/cli/visua-cli.js",
    "test": "nyc ts-mocha -p ./ test/**/*.spec.ts",
    "build": "npx tsc",
    "build:watch": "npx tsc -w",
    "build:clean": "rm -r dist && npm run build"
  },
  "bin": {
    "visua": "dist/cli/visua-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umbopepato/visua.git"
  },
  "types": "dist/visua.d.ts",
  "author": "Umberto Pepato",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/umbopepato/visua/issues"
  },
  "homepage": "https://github.com/umbopepato/visua#readme",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.1",
    "@types/node": "^9.6.21",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "source-map-support": "^0.5.6",
    "ts-mocha": "^1.2.0",
    "ts-node": "^6.1.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-markdown": "^1.1.18",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "css-tree": "^1.0.0-alpha.29",
    "readline-promise": "^1.0.3",
    "rimraf": "^2.6.2",
    "table": "^5.0.2",
    "winston": "^3.1.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/css-transform-component.ts"
    ],
    "include": [
      "src/"
    ],
    "all": true
  }
